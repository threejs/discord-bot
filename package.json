{
  "name": "three-bot",
  "version": "0.1.0",
  "homepage": "https://github.com/threejs/discord-bot",
  "description": "Discord bot for the three.js Discord server.",
  "repository": "https://github.com/threejs/threejs/discord-bot",
  "author": "Cody Bennett <hi@codyb.co>",
  "license": "MIT",
  "main": "src/config.js",
  "private": true,
  "devDependencies": {
    "eslint": "^7.26.0",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.2",
    "@babel/node": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "chalk": "4.1.1",
    "discord.js": "12.5.3",
    "dompurify": "^2.2.8",
    "dotenv": "9.0.2",
    "jsdom": "^16.5.3",
    "node-fetch": "^2.6.1"
  },
  "scripts": {
    "start": "nodemon --exec babel-node src",
    "build": "rimraf build && babel src -d build --ignore \"src/**/*.test.js\"",
    "serve": "node build",
    "test": "jest src --testTimeout=30000",
    "test-watch": "jest --watchAll --verbose --testTimeout=30000",
    "test-update": "jest src --updateSnapshot --testTimeout=30000",
    "lint": "eslint src && prettier src --check",
    "lint-fix": "eslint src --fix && prettier src --write src"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
